<%- layout('layout/template.ejs') %>
<div class="container border rounded p-5 my-5 w-50">
	<form method="POST" action="/register" class="row g-3 text-white needs-validation" novalidate>
		<div class="col-md-4">
			<input type="text" class="form-control" placeholder="Fullname" id="validationCustom01" name="fullname" required>
			<div class="valid-feedback">
				Looks good!
			</div>
			<div class="invalid-feedback">
				Please provide your name.
			</div>
		</div>
		<div class="col-md-4">
			<div class="input-group has-validation">
				<input type="text" class="form-control" placeholder="Username" name="username" id="validationCustomUsername"
					aria-describedby="inputGroupPrepend" required>
					<div class="valid-feedback">
						Looks good!
					</div>
				<div class="invalid-feedback">
					Please choose a username.
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<select class="form-select" id="validationCustom04" name="type" required>
				<option selected disabled value="">Choose...</option>
				<option value="typeA">Type A</option>
				<option value="typeB">Type B</option>
			</select>
			<div class="valid-feedback">
				Looks good!
			</div>
			<div class="invalid-feedback">
				Please select a type.
			</div>
		</div>
		<div class="col-md-6">
			<input type="email" class="form-control" placeholder="Email" id="validationCustom03" name="email" required>
			<div class="valid-feedback">
				Looks good!
			</div>
			<div class="invalid-feedback">
				Please provide a valid email.
			</div>
		</div>
		
		<div class="col-md-6">
			<input type="password" class="form-control" placeholder="Password" id="validationCustom05" minlength=8 name="password" required>
			<div class="valid-feedback">
				Looks good!
			</div>
			<div class="invalid-feedback">
				Please choose a password.
			</div>
		</div>
		<div class="col-12">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
					Agree to terms and conditions
				</label>
				<div class="invalid-feedback">
					You must agree before submitting.
				</div>
			</div>
		</div>
		<div class="col-12">
			<button class="btn-small btn btn-success" type="submit">Sign up</button>
		</div>
		<div class="col-12">
			<a href="/login" type="submit">Already have an account? Login</a>
		</div>
	</form>
	
</div>